!!!
%html
  %head
    %title BMW
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true"
    = javascript_include_tag "gmaps"
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,400italic,600italic,600,700,700italic,900,300italic,300,200italic,200' rel='stylesheet' type='text/css'>
    = csrf_meta_tags

    :coffeescript
      config =
        application: "#{ENV["BMW_APPLICATION_ID"]}"
        secret: "#{ENV["BMW_APPLICATION_ID"]}"
        hostname: "#{ENV["BMW_HOSTNAME"]}"

      window.bmw = new BMWClient(config)

  %body{id: [params[:controller], params[:action]]}
    = yield
